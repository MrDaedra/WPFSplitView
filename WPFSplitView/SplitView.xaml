             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ext="clr-namespace:WPFSplitView.Extensions"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFSplitView"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:a="clr-namespace:WPFSplitView.Animations">
    <Control.Resources>
        <Style TargetType="local:SplitView">                  
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:SplitView">
                        <Grid Background="{TemplateBinding Background}">
