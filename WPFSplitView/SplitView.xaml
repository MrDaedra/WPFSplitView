                            <Grid x:Name="ContentRoot" Grid.ColumnSpan="2">
                                <Border>
                                    <ContentPresenter Content="{TemplateBinding Content}"/>
                                </Border>
                                <Rectangle x:Name="LightDismissLayer" Fill="Transparent" Visibility="Collapsed"/>
                            </Grid>
                            <Grid x:Name="PaneRoot" Background="{TemplateBinding PaneBackground}" Grid.ColumnSpan="2" HorizontalAlignment="Left" Visibility="Collapsed" 
                                  Width="{Binding TemplateSettings.OpenPaneLength,RelativeSource={RelativeSource TemplatedParent}}">
                                <Grid x:Name="InnerPane" HorizontalAlignment="Left" Width="{Binding TemplateSettings.OpenPaneLength,RelativeSource={RelativeSource TemplatedParent}}">
                                    <ContentControl Content="{TemplateBinding Pane}"/>
                                    <Rectangle x:Name="HCPaneBorder" Fill="Transparent" HorizontalAlignment="Right" Visibility="Collapsed" Width="1"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Control.Resources>
</Control>
